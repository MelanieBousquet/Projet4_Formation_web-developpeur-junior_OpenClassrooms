{% extends "admin/layout.html.twig" %}

{% block body %}

<div id="page-wrapper">
   <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Modération commentaire</h1>
        </div>
    </div>

    <h3>Billet {{ comment.chapter.getId() }}, Auteur: "{{ comment.author }}", le {{ comment.date|date('d/m/Y')  }} | Etat :
        {% if comment.published %}
        Publié
        {% else %}
        En attente de modération
        {% endif %}
    </h3>

    <p>Commentaire: " {{ comment.content }} "</p>
    <a href="{{ path('ebook_blog_comments', { 'state': 'unpublished' }) }}" class="btn btn-default">
          <i class="glyphicon glyphicon-chevron-left"></i>
          Retour
    </a>
    {% if comment.published == 0 %}
    <a href="{{ path('ebook_blog_comment_add', { 'id': comment.id }) }}" class="btn btn-info btn">Accepter</a>
    {% endif %}
    <a href="{{ path('ebook_blog_comment_delete', { 'id': comment.id }) }}" class="btn btn-danger btn" title="Supprimer">Supprimer</a>
</div>
<!-- /#page-wrapper -->


{% endblock %}
