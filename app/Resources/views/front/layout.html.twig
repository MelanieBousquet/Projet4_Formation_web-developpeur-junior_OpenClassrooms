    <!-- Open Graph Tags for Facebook -->
    {% block OG %}
    <meta property="og:type"          content="website" />
    <meta property="og:title"         content="Blog de Jean Forteroche" />
    <meta property="og:description"   content="Découvrez le nouveau roman de Jean Forteroche en ligne, 'Billet simple pour l'Alaska', chapitre par chapitre" />
