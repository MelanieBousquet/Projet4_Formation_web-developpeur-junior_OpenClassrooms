{% extends "admin/layout.html.twig" %}

{% block body %}

<div id="page-wrapper">
   <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Supprimer le billet</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>

  <p>
    Etes-vous certain de vouloir supprimer le billet "{{ chapter.title }}, {{ chapter.subtitle }}" ?
  </p>

  <form action="{{ path('ebook_blog_chapter_delete', {'id': chapter.id}) }}" method="post">
    <a href="{{ path('ebook_blog_chapters', { 'state': 'all' }) }}" class="btn btn-default">
      <i class="glyphicon glyphicon-chevron-left"></i>
      Retour à la liste des billets
    </a>
    <input type="submit" value="Supprimer" class="btn btn-danger" />
    {# Ceci va générer le champ CSRF #}
    {{ form_rest(form) }}
  </form>

</div>
{% endblock %}


