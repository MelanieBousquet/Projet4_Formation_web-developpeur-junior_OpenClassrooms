

{% extends 'front/layout.html.twig' %}

{% block title %}{{ parent() }} Accueil -{% endblock %}

{% block header %}
    <header class="intro-header" style="background: url( {{asset('img/aurora-borealis.jpg')}}) bottom no-repeat ">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <div class="site-heading">
                        <h1>Billet simple pour l'Alaska</h1>
                        <hr class="small">
                        <span class="subheading">Retrouvez en ligne chapitre par chapitre le nouveau livre de Jean Forteroche</span>
                    </div>
                </div>
            </div>
        </div>
    </header>
{% endblock %}

{% block body %}
{% for chapter in listChapters %}
<div class="post-preview">
    <a href="{{ path('ebook_blog_view', {'id': chapter.id})}}">
        <h2 class="post-title">{{ chapter.title }}</h2>
        <h3 class="post-subtitle">{{ chapter.subtitle }} </h3>
    </a>
    <p class="post-meta">Par Jean Forteroche, le {{ chapter.date|date('d/m/Y') }} {% if chapter.date|date('d/m/Y') != chapter.updatedAt|date('d/m/Y') %} , mis Ã  jour le {{ chapter.updatedAt|date('d/m/Y')}} {% endif %}</p>
</div>
    {% else %}
      <div>Pas (encore !) de chapitres</div>
    {% endfor %}
<hr>
{% endblock %}
